C: 	EDIT THIS PARAMETER FILE IF PROGRAM DOES NOT COMPILE BECAUSE THE 
C:	STORAGE REQUIREMENTS ARE TOO GREAT (DECREASE SIZES) OR IF YOUR RUN
C:	PARAMETERS RESULT IN A "STORAGE EXCEEDED" MESSAGE (INCREASE SIZES).
c: NLMAX =	GEOACOUSTIC PARAMETER ARRAYS
c:		(total # layers in SVP, bottom, and top + 2)
c: NTLMAX = 	TRANSMISSION LOSS ARRAYS FOR CW CALCULATIONS
c: 		(# src depths) * (# rec depths) * (# ranges)
c:		REFLECTION COEFF ARRAYS FOR REFLECTION COEFF CALCULATIONS
c:		(# plane wave angles) * (# frequencies)
c:		R1R2 ARRAYS FOR K-PLANE IMAGES
c:		(# points on real k-axis) * (# points on imag k-axis)
c: NSRMAX = 	SOURCE AND RECEIVER DEPTH ARRAYS
c:		(# source depths + # receiver depths)
c: 		GRAZING ANGLE AXIS FOR REFLECTION COEFF CALCULATIONS
c:		(# grazing angles)
c: NRNGMAX =	SOURCE-RECEIVER RANGES OR SOURCE TRACK POINTS
c:		(# source-receiver ranges) or (# points on source track)
c: NSNRMAX =	SOURCE-RECEIVER RANGE ARRAYS 
c:		(# receivers) * (# ranges)
c: NSEGMAX = 	SOURCE TRACK ARRAYS
c:		(# source track segments specified for iitl=2 or iifft=2)
c: NM_MAX =	MODE CHARACTERISTICS ARRAYS
c:		(# modes)
c: NSR_NM_MAX =	MODE FUNCTION ARRAYS
c:		(# source depths + # receiver depths) * (# modes)
c: NTFMAX =	TRANSFER FUNCTION ARRAY FOR BROADBAND CALCULATIONS
c: 		(# FFT freqs)*(# rec depths)*(# src-rec ranges)
c: NFBBMAX =	FREQUENCY AXIS ARRAY FOR BROADBAND CALCULATIONS
c:		[# freqs to compute transfer function=(fmax-fmin)/(fs/nfft)]
c: 		FREQUENCY AXIS ARRAY FOR CW & REFL COEFF CALCULATIONS
c:		(# frequencies)
c: NM_NF_MAX = 	EIGENVALUE ARRAYS FOR BROADBAND CALCULATIONS
c:		(# modes at fmax) * (# FFT freqs)
c: NZ_NF_MAX = 	MODE FUNCTION ARRAYS FOR BROADBAND CALCULATIONS
c:		(# src/rec depths ) * (# FFT freqs)
c: NDMAX =      MAXIMUM NUMBER OF DUCTS IN A PROFILE
c: NPMAX =      MAXIMUM NUMBER OF ENVIRONMENTAL PARAMETERS TO VARY
c: NRECL =      DIRECT ACCESS FILE CONVENTION FOR recl=lenrec COMMAND:
c:              SET NRECL=1 FOR LENREC IN WORDS (SGI,ALPHA),
c:              NRECL=4 FOR LENREC IN BYTES (SUN).
c: SUFX =	OUTPUT FILE SUFFIX DELIMITER ('_' or '.', FOR EXAMPLE)
      integer*4 NLMAX,NTLMAX,NSRMAX,NRNGMAX,NM_MAX,NSR_NM_MAX,
     .   NTFMAX,NFBBMAX,NM_NF_MAX,NZ_NF_MAX,NRECL,NSNRMAX,NSEGMAX,LML,
     .   NHDFMAX,NDMAX,NPMAX,RGMAX,NRECSAMP
      integer*4 luinp,luout,luttrf,lualon,lusvp
      character*1 SUFX
      character*128 MLINE
c      parameter(NLMAX=200,NTLMAX=1000000,NSRMAX=3000,
c     .   NRNGMAX=5000,NM_MAX=10000,NSR_NM_MAX=1000000,NTFMAX=40960000,
c     .   NFBBMAX=8192,NM_NF_MAX=2000000,NZ_NF_MAX=200000,NRECL=4,
c     .   NSNRMAX=1000000,NSEGMAX=50,NHDFMAX=max(NTLMAX,NM_NF_MAX),
c     .   NDMAX=25,NPMAX=25,SUFX='_',MLINE='MEMORY LIMIT EXCEEDED!  '//
c     .   'CHECK INPUTS OR CHANGE LIMITS IN Parms_com.',LML=67)
      parameter(NLMAX=51,NTLMAX=15000,NSRMAX=300,RGMAX=100,
c    .   NRNGMAX=500,NM_MAX=2000,NSR_NM_MAX=80000,NTFMAX=2048000,
     .   NRNGMAX=150,NM_MAX=1000,NSR_NM_MAX=60000,NTFMAX=5000000,
     .   NFBBMAX=301,NM_NF_MAX=50000,NZ_NF_MAX=32768,NRECL=4,
     .   NSNRMAX=512,NSEGMAX=5,NHDFMAX=max(NTLMAX,NM_NF_MAX),
     .   NDMAX=25,NPMAX=25,NRECSAMP=200,
     .   luinp=1,luout=2,luttrf=16,lualon=17,lusvp=91,
     .   SUFX='_',MLINE='MEMORY LIMIT EXCEEDED!  '//
     .   'CHECK INPUTS OR CHANGE LIMITS IN Parms_com.',LML=67)
